import {createTransport} from 'nodemailer';

const sendMail = async({email,subject,html})=>{
    const transport = createTransport({
        host:"smtp.gmail.com",
        port:465,
        auth:{
            user:"sdsada",
            pass:"dsadsa"
        }
    });

    await transport.sendMail({
        from:"wdwqd",
        to:email,
        subject,
        html
    });
};

export default sendMail;